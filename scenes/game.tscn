	var x = Global.screen_size.x + 100
	var item = scene.instantiate()
	item.global_position = Vector2(x,y)
	add_child(item)






var sequence = [
	{ \"delay\": 1.0, \"action\": func(): spawner(0, powerup) },
	{ \"delay\": 1.0, \"action\": func(): spawner(0, powerup) },
