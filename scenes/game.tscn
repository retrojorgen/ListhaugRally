func start_sequence():
	if index >= sequence.size():
		index = round(sequence.size() / 2)
	var step = sequence[index]	
	step.action.call() # kaller spawn_hole(), spawn_car() osv.
	await get_tree().create_timer(step.delay).timeout
	if Global.speed > 0:
		index += 1
		start_sequence()
			
